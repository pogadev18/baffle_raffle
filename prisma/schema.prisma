// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @unique
  chainId       Int?
  domain        String?
  uri           String?
  version       String?
  nonce         String?
  profileId     String?
  name          String?
  email         String? @unique

  games GamesOnUsers[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Game {
  id          String @id @default(cuid())
  ticketPrice Int
  totalSum    Int
  bigPrize    Int
  winners     Int

  users GamesOnUsers[]

  @@map("games")
}

model GamesOnUsers {
  user          User   @relation(fields: [walletAddress], references: [id])
  walletAddress String // relation scalar field (used in the `@relation` attribute above)

  game   Game   @relation(fields: [gameId], references: [id])
  gameId String

  assignedAt DateTime @default(now())
  assignedBy String

  @@id([walletAddress, gameId])

  @@map("games_and_users")
}
